@model IEnumerable<TrabalhoFinalCinema.Models.Comidas>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Comidas</h2>

@if (Model.Any())
{
    <p>
        @Html.ActionLink("Nova Comida", "New", null, new { @class = "bt btn-primary"})
    </p>
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Comida</th></tr>
        </thead>
        <tbody>
            @foreach (var comida in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@comida.Tipo, "Editar", new { comida.Id })</td>
                    <td>@comida.Tipo</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhuma comida disponível no momento.</p>
}
