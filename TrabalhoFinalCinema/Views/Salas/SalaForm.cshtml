@model TrabalhoFinalCinema.Models.Salas
@{
    ViewBag.Title = Model.Id == 0 ? "Nova Sala" : "Editar Sala";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Salas"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Nome)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CapacidadePessoas)
        @Html.TextBoxFor(m => m.CapacidadePessoas, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CapacidadePessoas)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.TresD) Sala 3D
        </label>
    </div>
    
    <button type="submit" class="btn btn-primary">Salvar</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            $.validator.methods.date = function (value, element) {
                Globalize.culture("pt-BR");
                return this.optional(element) || Globalize.parseDate(value) !== null;
            }
        })
    </script>
}