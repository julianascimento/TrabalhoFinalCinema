@model TrabalhoFinalCinema.ViewModels.FilmesIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Filmes</h2>

@if (@Model.Filmes.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Filme</th></tr>
        </thead>
        <tbody>
            @foreach (var filme in Model.Filmes)
            {
                <tr><td>@Html.ActionLink(@filme.Nome, "Details", new { filme.Id })</td></tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhum filme disponível ainda.</p>
}